{
  "manifest_version": 2,
  "name": "Chrome Chronopher",
  "author": "Shota Furuya",
  "version": "0.0.1",
  "description": "自由に音声を選べる時報アプリ",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "background",
    "storage"
  ],
  "browser_action": {
    "default_title": "Chrome Chronopher",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "options_page": "config.html"
}
